@model IEnumerable<ProektnaZadaca.Models.Flight>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Administrator"))
{
    <p style="margin-top: 15px; margin-left: 800px; margin-bottom: 35px;">
        <input type="button" value="Add a new airline" class="btn btn-default" onclick="location.href='@Url.Action("Create", "Flights")'" />
    </p>
}
<table class="table" style="margin-left: 250px; margin-bottom: 250px; width: 85%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.flightName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.flightName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <div style="color: black">
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Edit |", "Edit", new { id = item.flightId }, new { @style = "color:black;" })}
                    @Html.ActionLink("Details", "Details", new { id = item.flightId }, new { @style = "color:black;" })
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("| Delete", "Delete", new { id = item.flightId }, new { @style = "color:black;" })}
                </div>
            </td>
        </tr>
    }

</table>
